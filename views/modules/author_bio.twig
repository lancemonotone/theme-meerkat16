{% set author_name = fn('get_the_author_meta', 'display_name', post.post_author) %}
{% set author_description = fn('get_the_author_meta', 'description', post.post_author) %}
{% if author_name != 'admin' %}
    <div class="author-bio cf">
        {% set author_avatar = fn('get_avatar', post.post_author) %}
        {% if author_avatar %}
            <div class="author-avatar">{{ author_avatar }}</div>
        {% endif %}
        {% if author_description %}
            <div class="author-description">
                <h3>{{ __('About') }} {{ author_name }}:</h3>
                {{ author_description }}
            </div>
        {% endif %}
        <div class="post-author">
            {{ __('View all posts by') }}
            <a href="{{ fn('get_author_posts_url', post.post_author) }}">{{ author_name }}.</a>
        </div>
    </div>
{% endif %}